- provide(:title, "マイページ")
- breadcrumb :mypage, @user

section
  .d-flex.align-items-center
    .user_avatar.mr-4.mb-4
      = link_to mypage_path(@user) do
        - if @user.avatar.attached?
          = image_tag @user.display_avatar, class: "shadow"
        - else
          img.shadow src="https://placehold.jp/150x150.png?text=Non-Image"
    .user.d-flex.align-items-center
      .user-box.mr-3
        = link_to mypage_path(@user) do
          h2.headingLv
            = @user.username
          p.mb-0
            | レビュー 10件
        p.mb-2
          | お気に入り 10件
      .user-btn
        - if current_user?(@user)
          = link_to "プロフィール編集", edit_user_registration_path, class: "btn btn-info rounded-pill mb-2"
        - else
          span id="follow-#{@user.id}"
            a.btn.btn-info.rounded-pill href="#"
              | フォローする
        = link_to "レビューする", gunplas_path, class: "btn btn-success rounded-pill d-block"

section.user_profile.mb-5.col-sm-7
  p.font-weight-bold.mb-0
    | プロフィール
  = simple_format(h(@user.profile), {}, sanitize: false)

section.user_stats.mb-4.pb-3.border-bottom.border-secondary
  .d-flex.justify-content-around
    a href="#"
      strong
        | いいね！
        span#iines
          | (10)
    a href="#"
      strong
        | フォロー
        span#following
          | (10)
    a href="#"
      strong#followers
        | フォロワー
        span#iines
          | (10)

